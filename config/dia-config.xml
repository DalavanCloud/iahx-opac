<?xml version="1.0"?>
<dia_config>
    <site>scielobooks</site>
    <bvs_url>http://www.bvs.br/</bvs_url>
    <about_bvs_url>http://www.bvs.br/</about_bvs_url>
    <home_url>http://www.bvs.br/</home_url>
    <mobile_home_url>http://mbvs.mobi/</mobile_home_url>
    <search_server>localhost:8080</search_server>
    <log_dir>/tmp/</log_dir>
    <documents_per_page>10</documents_per_page>
    <default_lang>pt</default_lang>
    <environment>homolog</environment>
    <google_analytics>
        <enabled>false</enabled> <!-- true | false -->
        <id>UA-624952-7</id>
    </google_analytics>
    <scielobooks>
        <base_url>http://localhost:6543</base_url>
    </scielobooks>
    <search_collection_list>
        <collection>
            <name></name>
            <cluster_items_limit>20</cluster_items_limit>
            <set></set>
            <restriction>(is_public:true)</restriction>
            <index_list>
                <index>
                    <name>LBL_INDEX_ALL</name>
                    <prefix>tw</prefix>
                </index>
                <index>
                    <name>LBL_INDEX_TITLE</name>
                    <prefix>title</prefix>
                </index>
                <index>
                    <name>LBL_INDEX_AUTHOR</name>
                    <prefix>author</prefix>
                </index>
                <index>
                    <name>LBL_INDEX_ISBN</name>
                    <prefix>isbn</prefix>
                </index>
            </index_list>
            <where_list>
                <where>
                    <default_for_empty_query>1</default_for_empty_query>
                    <name>BOOK</name>
                    <filter>book</filter>
                </where>
                <where>
                    <name>PART</name>
                    <filter>part</filter>
                </where>
                <where>
                    <name>BOOK_PART</name>
                    <filter></filter>
                </where>
             </where_list>
             <sort_list>
                 <sort>
                     <name>RELEVANCE</name>
                     <value>score desc</value>
                 </sort>
                 <sort>
                     <default_for_empty_query>1</default_for_empty_query>
                     <name>YEAR_DESC</name>
                     <value>year desc</value>
                 </sort>
                 <sort>
                     <name>YEAR_ASC</name>
                     <value>year asc</value>
                 </sort>
             </sort_list>
        </collection>
    </search_collection_list>
</dia_config>

